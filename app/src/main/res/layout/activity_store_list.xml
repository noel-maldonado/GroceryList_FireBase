<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ListStoreActivity"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <RelativeLayout
        android:id="@+id/topPanelLayoutStore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        >



        <SearchView
            android:id="@+id/search_bar_Store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewStore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topPanelLayoutStore"
        android:layout_above="@+id/bottomPanelLayoutStore"
        android:padding="4dp"
        android:scrollbars="vertical"
        android:background="@android:color/darker_gray"
        />



    <RelativeLayout
        android:id="@+id/bottomPanelLayoutStore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        >


        <ImageButton
            android:id="@+id/listImageButtonStore"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/list"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:foregroundGravity="left"
            android:layout_marginStart="50dp"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/list_button"
            android:background="#5DB0A7"/>

        <ImageButton
            android:id="@+id/settingsImageButtonStore"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/setting"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_marginRight="50dp"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/settings_button"
            android:layout_alignParentRight="true"
            android:background="#5DB0A7"/>




    </RelativeLayout>

</RelativeLayout>