<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        
        >

        <ImageButton
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="2dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            />
        
        <TextView
            android:id="@+id/line1TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line 1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"/>

        <TextView
            android:id="@+id/line2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="line 2"
            android:textSize="15sp"
            android:layout_below="@+id/line1TextView"
            android:layout_toEndOf="@id/imageView"
            android:layout_marginStart="8dp"
            />

        <Button
            android:id="@+id/buttonDeleteContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/system_red"
            android:background="@color/system_transparent"
            android:visibility="invisible"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="Delete"/>

    </RelativeLayout>
    
    
</androidx.cardview.widget.CardView>